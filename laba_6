// 1
#include <iostream>
#include <locale.h>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	int a, b, c;
	cout << "Введите a и b: ";    cin >> a >> b;
	c = a;	a = b;	b = c;
	cout <<"b = " << a << "a = " << b;
	return 0;
}
// 2
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int a, b, c, d;
	cout << "Введите а, b, c: ";  cin >> a >> b >> c;
	d = a;	a = c;	c = b;	b = d;
	cout <<"a = "<< a << "b = " << b << "c = " << c;
	return 0;
}
// 3
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int a, b, c, d;
	cout << "Введите а, b, c: "; cin >> a >> b >> c;
	d = a;	a = b;	b = c;	c = d;
	cout << "a = " << a << "b = " << b << "c = " << c;
	return 0;
}
// 4
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int x, y;
	cout << "Введите х: ";	cin >> x;
	cout << "y = "<< pow(x, 6) - 6 * pow(x, 2) - 7;
	return 0;
}
// 5
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int x, y;
	cout << "Введите х: "; cin >> x;
	cout << "y = "<< 4 * pow((x - 3), 6) - 7 * pow((x - 3), 3) + 2;
	return 0;
}
// 6
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int A, B;
	cout << "Введите A: "; cin >> A;
	B = A * A;
	A = B * B;
	B = A * A;
	cout << "A^8 = " << B;
	return 0;
}
// 7
#include <iostream>
#include<locale.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	int A, B, C;
	cout << "Введите A: "; cin >> A;
	B = A * A;
	C = B * A;
	A = C * C;
	B = A * A;
	A = C * B;
	cout << "A^15 = " << A;
	return 0;
}
